@model List<GetCategoryAdminVM>
@{
    int count = 0;
}
<div class="row">
 
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Table</h4>
               
                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success ">Create Category</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (GetCategoryAdminVM categoryVM in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                      @count
                                    </td>
                                    <td>
                                        <p>@categoryVM.Name</p>
                                    </td>
                                    <td>
                                       <p>@categoryVM.ProductCount</p>
                                    </td>
                                    <td>
                                     <a asp-action="update" asp-route-id="@categoryVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@categoryVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-secondary"><i class="mdi mdi-information"></i></a>
                                    </td>
                                  
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
